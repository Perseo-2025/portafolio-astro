---
import { Image } from 'astro:assets';
interface Props { project: Porject; index: number; }
const { project, index } = Astro.props;
const { title, description, urlImg, usedSkill, link } = project;
---
<article class=" bg-opacity-50 rounded-lg overflow-hidden shadow-lg flex flex-col">
  <a href={link} target="_blank" class="block">
    <Image height={300} width={300} src={urlImg} alt={title} class="w-full h-48 object-cover hover:scale-105 transition" />
  </a>
  <div class="p-4 flex flex-col flex-grow">
    <h3 class="text-xl font-semibold mb-2">{title}</h3>
    <p class="text-gray-300 flex-grow">{description}</p>
    <div class="mt-4 flex flex-wrap gap-2">
      {usedSkill.map((skill) => (
        <div class="flex items-center bg-gray-700 px-2 py-1 rounded">
          <img src={skill.iconUrl} alt={skill.name} class="w-5 h-5 mr-2" />
          <span class="text-sm">{skill.name}</span>
        </div>
      ))}
    </div>
    <a href={link} target="_blank" class="mt-4 inline-block hover:font-bold">
      Ver proyecto â†’
    </a>
  </div>
</article>
