<style>
  .light-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 0; /* detr√°s de todo */
    background: radial-gradient(circle at var(--x, 50%) var(--y, 50%), rgba(255, 255, 255, 0.1), transparent 60%);
    transition: background 0.05s ease-out;
  }
</style>

<div class="light-overlay" id="mouse-light"></div>

<script>
  window.addEventListener('DOMContentLoaded', () => {
    const light = document.getElementById('mouse-light');
    if (!light) return;

    document.addEventListener('mousemove', (e) => {
      const x = `${e.clientX}px`;
      const y = `${e.clientY}px`;
      light.style.setProperty('--x', x);
      light.style.setProperty('--y', y);
    });
  });
</script>

